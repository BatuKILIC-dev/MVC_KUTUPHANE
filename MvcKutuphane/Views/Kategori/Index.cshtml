@using MvcKutuphane.Models.Entity
@model List<TBLKATEGORI>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2 class="headers">KATEGORİLER</h2>

<div >
    <table class="table table-bordered" style="text-align:center">
        <tr>
            <th class="theader">ID</th>
            <th class="theader">ADI</th>
        </tr>

        @foreach (var asd in Model)
        {

            <tr>
                <td>@asd.ID</td>
                <td>@asd.AD</td>
                <td>
                    @Html.ActionLink("Sil", "KategoriSil", new { id = asd.ID },
               new { @class = "btn btn-danger", onclick = "return confirm('silmek istiyor musunuz')" })
                </td>

                <td><a href="/Kategori/KategoriGetir/@asd.ID" class="btn btn-success">Güncelle</a></td>


            </tr>
        }
    </table>

    <a href="/Kategori/KategoriEkle/" class="btn btn-primary" style="margin-bottom:15px">Yeni Kategori Ekle</a>
</div>